<div class="ob_Section--2col ob_Section">
  <div class="ob_Section__inner">
    <h2 class="ob_Section__title">Inline Image Loading</h2>

    <div class="ob_Image lazyLoader" data-image-load="view" 
      data-image-config='{ "type" : "inline", "reload" : true }' 
      data-src-set='{
        "max":"/assets/img/placeholder_epoch.png",
        "1100":"/assets/img/placeholder_epoch.png",
        "500":"/assets/img/placeholder_epoch.png"
      }' 
      data-alt="Highland mountains">
      <noscript >
        <img src="/assets/img/placeholder_epoch.png" alt="Placeholder" />
      </noscript>
    </div>
  </div>

  <div class="ob_Section__inner">
    <h2 class="ob_Section__title">Background Image Loading</h2>

    <div class="ob_Image--background ob_Image lazyLoader" data-image-load="view" 
      data-image-config='{ "type" : "background", "reload" : true }' 
      data-src-set='{
        "max":"/assets/img/placeholder_epoch.png",
        "1100":"/assets/img/placeholder_epoch.png",
        "500":"/assets/img/placeholder_epoch.png"
      }' 
      data-alt="Highland mountains">
      <noscript >
        <img src="/assets/img/placeholder_epoch.png" alt="Placeholder" />
      </noscript>
    </div>
  </div>
</div>